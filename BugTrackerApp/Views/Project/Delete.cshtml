@model Project
@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager


@if (User.IsInRole("Admin") || User.IsInRole("Manager"))
{

    <form method="post" asp-action="Delete">
        <input asp-for="Id" hidden />
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary">Delete Project</h2>
                <hr />
            </div>
            <!--<div asp-validation-summary="All"></div>   -->                     <!--display all error messages-->
            <div class="mb-3">
                <label asp-for="Name"></label>
                <input asp-for="Name" disabled class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="Description"></label>
                <input asp-for="Description" disabled class="form-control" />
            </div>
            <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
            <a asp-controller="Project" asp-action="Index" class="btn btn-secondary" style="width:150px">
                Back to list
            </a>
        </div>
    </form>

    <!--client side validation using built in partial view-->
    @section Scripts
    {
        @{
            <partial name="_ValidationScriptsPartial.cshtml" />
        }
    }

}